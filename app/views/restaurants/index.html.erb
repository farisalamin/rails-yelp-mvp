<div class="grid d-flex flex-wrap">
  <% @restaurants.each do |restaurant| %>
    <div class="card my-3 mx-auto" style="width: 18rem;">
      <img class="card-img-top" src="https://source.unsplash.com/1600x900/?food,<%= restaurant.category %>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <p class="card-text"><%= restaurant.category.capitalize %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= restaurant.address %></li>
        <li class="list-group-item"><%= restaurant.phone_number %></li>
      </ul>
      <div class="card-body">
        <%= link_to "More info", restaurant_path(restaurant) , class: "card-link" %>
        <%= link_to "+ Add a review", new_restaurant_review_path(restaurant) , class: "card-link" %>
      </div>
    </div>
  <% end %>
</div>
